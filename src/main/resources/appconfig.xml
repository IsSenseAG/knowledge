<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<app>
    <systemName>knowledge</systemName>
    <envKey>KNOWLEDGE_HOME</envKey>
    <time_zone>Asia/Tokyo</time_zone>
    <basePath>{user.home}/.knowledge</basePath>
    <indexPath>{base.path}/index/</indexPath>
    <tmpPath>{base.path}/tmp/</tmpPath>
    <databasePath>{base.path}/db/</databasePath>
    <logsPath>{base.path}/logs/</logsPath>
    <uploadMaxMBSize>500</uploadMaxMBSize>
    <hashIterations>100</hashIterations>
    <languages>
        <language>
            <label>Japanese</label>
            <value>ja</value>
        </language>
        <language>
            <label>English</label>
            <value>en</value>
        </language>
    </languages>

    <hostName>10.2.1.167</hostName>
    <redmineURL>http://10.2.1.167:10083/</redmineURL>
